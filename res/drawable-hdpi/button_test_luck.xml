<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D9F82A" />
            <stroke
                android:width="1dp"
                android:color="#737F24" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#D9F82A"
                android:endColor="#737F24"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#737F24" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>