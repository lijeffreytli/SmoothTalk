<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smoothtalk"
    android:versionCode="1"
    android:versionName="1.0" >
    
    
    <!-- Necessary permissions to access contacts and send messages -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.smoothtalk.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
       <activity
            android:name="com.example.smoothtalk.ActionbarHelp"
            android:label="@string/action_help"
            android:parentActivityName="com.example.smoothtalk.MainActivity" >
        </activity>
        
       <activity
            android:name="com.example.smoothtalk.ActionbarAbout"
            android:label="@string/action_about"
            android:parentActivityName="com.example.smoothtalk.MainActivity" >
        </activity>
        
        
        
        <activity
            android:name="com.example.smoothtalk.GetContacts" >
        </activity>
        
        <activity
            android:name="com.example.smoothtalk.GetSettings" >
        </activity>
        
        
        <activity
        	android:name="com.example.smoothtalk.SendToNumber"
        	android:parentActivityName="com.example.smoothtalk.MainActivity" >
        	<meta-data
            	android:name="android.support.PARENT_ACTIVITY"
            	android:value="com.example.smoothtalk.MainActivity" />
    	</activity>
    
        
        
        
        
    </application>

</manifest>
